<div class="container">
    <div class="screen">
        <div class="screen__content">
            <div class="login">
                <h1>Login</h1>
                <% if (messages.error) { %>
                    <%= messages.error %>
                        <% } %>
                            <form action="/login" method="POST">
                                <div class="login__field">
                                    <i class="login__icon fas fa-envelope"></i>
                                    <input type="email" name="email" class="login__input" placeholder="Email"
                                        required />
                                </div>
                                <div class="login__field">
                                    <i class="login__icon fas fa-lock"></i>
                                    <input type="password" name="password" class="login__input" placeholder="Passwort"
                                        required />
                                </div>
                                <button class="button login__submit" type="submit">
                                    <span class="button__text">Login</span>
                                    <i class="button__icon fas fa-chevron-right"></i>
                                </button>
                                <a href="/register">Register</a>
                            </form>
            </div>
            <div class="social-login">
                <h3>log in via</h3>
                <div class="social-icons">
                    <a href="#"><i class='social-login__icon fab fa-instagram'></i></a>
                    <a href="#"><i class='social-login__icon fab fa-facebook'></i></a>
                    <a href="#"><i class='social-login__icon fab fa-twitter'></i></a>
                </div>
            </div>
        </div>
        <div class="screen__background">
            <span class="screen__background__shape screen__background__shape4"></span>
            <span class="screen__background__shape screen__background__shape3"></span>
            <span class="screen__background__shape screen__background__shape2"></span>
            <span class="screen__background__shape screen__background__shape1"></span>
        </div>
    </div>
</div>